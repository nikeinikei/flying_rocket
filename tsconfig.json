{
  "compilerOptions": {
    "lib": ["esnext"],
    "rootDir": "src",
    "outDir": "game",
    "strict": true,
    "downlevelIteration": true,
    "types": [
      "lua-types/jit",
      "love-typescript-definitions"
    ]
  },
  "tstl": {
    "luaLibImport": "require",
    "luaTarget": "JIT",
    "noImplicitSelf": true,
    "sourceMapTraceback": true
  }
}
